# User config directory
include $HOME/.config/sway/config.d/*

# Idle configuration
exec swayidle -w \
    timeout 1070 '[ "$(swaymsg -t get_tree | jq -r ".. | select(.type?) | .type" | grep -iE "browser|video")" ] || swaylock -f -C ~/.config/swaylock/config' \
    timeout 770 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -C $HOME/.config/swaylock/config'

# Status Bar:
bar {    
  swaybar_command waybar
}

include /etc/sway/config.d/*
